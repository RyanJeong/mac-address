{
    "editor.autoClosingBrackets": "never",
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
	  "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "workbench.startupEditor": "none",
    "scm.inputFontSize": 16,
    "markdown.preview.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "debug.console.lineHeight": 16,
    "debug.console.fontSize": 16,
    "editor.fontSize": 16,
    "editor.fontFamily": "Consolas, 'Droid Sans Mono', 'monospace', monospace",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "workbench.colorTheme": "Community Material Theme Darker",
    "workbench.settings.openDefaultSettings": true,
    "debug.onTaskErrors": "showErrors",
    // WIP
    "cpplint.cpplintPath": "/usr/bin/cpplint",
    // Object with environment variables that will be added to the VS Code process to be used by the terminal on Linux. Set to `null` to delete the environment variable.
    "terminal.integrated.env.linux": {},
    // Object with environment variables that will be added to the VS Code process to be used by the terminal on macOS. Set to `null` to delete the environment variable.
    "terminal.integrated.env.osx": {},
    // Object with environment variables that will be added to the VS Code process to be used by the terminal on Windows. Set to `null` to delete the environment variable.
    "terminal.integrated.env.windows": {},
    "json.format.enable": false,
    "cmake.configureOnOpen": true,
    "code-runner.runInTerminal": true,
    "workbench.settings.editor": "ui",
    "search.exclude": {
        "**/.git": true,
        "**/third_party": true,
        "**/latex": true,
        "**/html": true,
        "**/build": true
    },
